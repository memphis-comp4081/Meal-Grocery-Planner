<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<h1>Add Item to Pantry</h1>
  </div>
</div>	

<%= form_for(:components_ingredient) do |f| %>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<p>
	<%= f.label :ingredient %>:
	<%= f.collection_select(:ingredient_id, @ingredients, :id, :description) %>
	</p>
  </div>
</div>	

<div class="row">
  <div class="col-md-4 col-md-offset-5">	
	<p>
	<%= f.submit %>
	</p>
  </div>
</div>	
<% end %>
