<div class="row">
	<div class="col-md-4 col-md-offset-5">
		<h2>Dishes</h2>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<table class="table table-striped">
			<tr>
				<th>Description</th>
				<th>Recipe</th>
				<th></th>
			</tr>
			<% @components.each do |component| %>

			<tr>
				<td><%= component.description %></td>
				<td><%= component.instructions %></td>
				<td>[<%= link_to "update", component_edit_path(component) %>]</td>
			<tr>

			<% end %>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-4 col-md-offset-5">
		<p>
			<%= link_to "Add New Dish", component_add_path %>
		</p>
	</div>
</div>

