<div class="row">
  <div class="col-md-4 col-md-offset-4">
	<h1>Add New Component</h1>
  </div>
</div>	

<%= form_for(:component) do |f| %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
	<p>
	<%= f.label :description %>:
	<%= f.text_field :description %>
	</p>
  </div>
</div>	

<div class="row">
  <div class="col-md-4 col-md-offset-4">
	<p>
	<%= f.label :instructions %>:
	<textarea class = "form-control" rows = "5" id = "instructions">
		<%= f.text_field :instructions %>:
	</textarea>
	</p>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-4">	
	<p>
	<%= f.submit %>
	</p>
  </div>
</div>	
<% end %>
