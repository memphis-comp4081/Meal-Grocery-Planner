<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<h1>Add New Component</h1>
  </div>
</div>	

<%= form_for(:component) do |f| %>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<p>
	<%= f.label :description %>:
	<%= f.text_field :description %>
	</p>
  </div>
</div>	

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<p>
	<%= f.label :instructions %>:
	<%= f.text_field :instructions %>
	</p>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-5">	
	<p>
	<%= f.submit %>
	</p>
  </div>
</div>	
<% end %>
