<div class="container-fluid full-height-width">
	<div class="row well-content">
		<div class="col-md-8 col-sm-offset-2">

			<div class="row">
			  <div class="col-md-12 centered-item border-bottom">
				<h2>Add Item to Pantry</h2>
			  </div>
			</div>	

			<%= form_for(:pantry) do |f| %>

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= f.label :ingredient %>:
				<%= f.collection_select(:ingredient_id, @ingredients, :id, :description, {}, {class: "form-control select-two select-two-style"}) %>
				</p>
			  </div>
			</div>	

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= f.label :quantity %>:
				<%= f.text_field :quantity %>
				</p>
			  </div>
			</div>

			<div class="row">
			  <div class="col-md-12 centered-item">	
				<p>
				<%= f.submit %>
				</p>
			  </div>
			</div>	
			<% end %>

			<div class="row">
			  <div class="col-md-4 col-md-offset-4">
				<%= button_to "Don't see your ingredient?", ingredient_add_path, method: :get %>
			  </div>
			</div>

		</div>
	</div>
</div>	