<div class="row">
 	<div class="col-md-4 col-md-offset-4">
		<h1>Add Meal</h1>
  	</div>
</div>

<%= form_for(:meal, html: { multipart: true }) do |f| %>

<div class="row">
  	<div class="col-md-4 col-md-offset-4">
  			<%= f.label :name %>:
  			<%= f.text_field :name, class: "input-text" %>
  	</div>
</div>

<div class="row">
  	<div class="col-md-4 col-md-offset-4">
  			<%= f.label :description %>:
  			<%= f.text_area :description, class: 'form-control input-text-area' %>
  	</div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <p>
  <%= f.label("Image (Optional)") %>:
  <%= f.file_field :image %>
  </p>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-4">	
	<p>
	<%= f.submit %>
	</p>
  </div>
</div>	
<% end %>
