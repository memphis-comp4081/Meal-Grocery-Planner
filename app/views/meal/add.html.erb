
<div class="row">
 	<div class="col-md-4 col-md-offset-5">
		<h1>Add Meal</h1>
  	</div>
</div>

<%= form_for(:meal) do |f| %>

<div class="row">
  	<div class="col-md-4 col-md-offset-5">
  		<p>
  			<%= f.label :name %>:
  			<%= f.text_field :name %>
  		</p>
  	</div>
</div>

<div class="row">
  	<div class="col-md-4 col-md-offset-5">
  		<p>
  			<%= f.label :description %>:
  			<%= f.text_field :description %>
  		</p>
  	</div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-5">	
	<p>
	<%= f.submit %>
	</p>
  </div>
</div>	
<% end %>

