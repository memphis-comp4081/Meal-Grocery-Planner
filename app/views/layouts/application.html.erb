  <div class="container-fluid excess-margin"> 
    <div class="row excess-margin">
      <div class="col-md-12 excess-margin">
 		   <p class="alert alert-info"><%=flash[:notice] %></p>
      </div>
    </div>
  </div>
 	<% end %>

 	<% if flash[:alert] %>
  <div class="container-fluid excess-margin"> 
    <div class="row excess-margin">
      <div class="col-md-12 excess-margin">
 		   <p class="alert alert-danger"><%= flash[:alert] %></p>
      </div>
    </div>
  </div>
 	<% end %>

