<div class="container-fluid full-height-width">
	<div class="row well-content">
		<div class="col-md-8 col-sm-offset-2">	

			<div class="row">
			  <div class="col-md-12 border-bottom centered-item">
				<h2>Edit User Information</h2>
			  </div>
			</div>	

			<%= form_for(@user) do |u| %>

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= u.label 'Email' %>:
				<%= u.text_field :email %>
				</p>
			  </div>
			</div>	

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= u.label :first_name %>:
				<%= u.text_field :first_name %>
				</p>
			  </div>
			</div>	

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= u.label :last_name %>:
				<%= u.text_field :last_name %>
				</p>
			  </div>
			</div>	

			<div class="row">
			  <div class="col-md-12 centered-item">
				<p>
				<%= u.submit "Submit", class: "btn" %>
				</p>
			  </div>
			</div>	

			<% end %>
		</div>
	</div>
</div>

