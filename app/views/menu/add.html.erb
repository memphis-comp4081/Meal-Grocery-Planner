
<%= form_tag do %>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<P>My Favorite Meals:</p>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<select name = "meal_select">
		<% @meal_list.each do |menu| %>
			<option value = "<%= menu.meal.id %>"><%= menu.meal.name %></option>
		<% end %>
	</select>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<%= link_to "Add Favorite Meals", meal_list_path(), method: :get %>
  </div>
</div>

<br>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<p>Date (MM/DD/YY)</p>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<input type = "text" name = "date">
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<p>Time (hour:minute)</p>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<input type="text" name="time">
		<select name = "time_offset">
		<option value = "0">AM</option>
		<option value = "1">PM</option>
	</select>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
	<%= submit_tag("Add Meal") %>
  </div>
</div>



<% end %>